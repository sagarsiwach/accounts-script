{
  "name": "accounts-script",
  "version": "0.1.0",
  "description": "Google Apps Script for Classic Group financial data aggregation",
  "main": "src/main.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "push": "npm test && clasp push",
    "push:force": "clasp push",
    "pull": "clasp pull",
    "open": "clasp open",
    "logs": "clasp logs",
    "deploy": "npm test && clasp push && clasp deploy"
  },
  "keywords": [
    "google-apps-script",
    "accounting",
    "ledger",
    "classic-group"
  ],
  "author": "Sagar Siwach",
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "@google/clasp": "^2.4.2",
    "@types/google-apps-script": "^1.0.83",
    "eslint": "^8.57.0",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/ui/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
